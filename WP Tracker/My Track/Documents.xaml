                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding FileName}" Margin="5" FontSize="{StaticResource PhoneFontSizeLarge}" />
                                        <TextBlock Text="{Binding DateCreated}" Margin="5" FontSize="{StaticResource PhoneFontSizeMediumLarge}" />
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <TextBlock x:Name="feedbackRoutes" VerticalAlignment="Center" FontSize="{StaticResource PhoneFontSizeLarge}" TextWrapping="Wrap" TextAlignment="Center">
                        There are no routes not show... Yet
                        <LineBreak/><LineBreak/>
                        Let's make some noise recording some routes, and the go back here to see them on this screen.
                    </TextBlock>
                </Grid>
                
            </ScrollViewer>
        </Grid>
    </Grid>

</phone:PhoneApplicationPage>